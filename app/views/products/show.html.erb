<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-6">
      <%= image_tag(@product.image_url, class: "img-responsive") %>
    </div>
    <div class="col-md-6 col-sm-6">
      <h3><%= @product.name %></h3>

      <p>
        <b>description:</b>
        <%= @product.description %>
      </p>

      <p>
        <b>colour:</b>
        <%= @product.colour %>
      </p>

      <p>
        <b>price:</b>
        â‚¬<%= @product.price %>
      </p>

      <p>
        <b>Highest rating:</b>
        <%= @product.highest_rating_comment.try(:rating) %>
      </p>

      <p>
        <b>Lowest rating:</b>
        <%= @product.lowest_rating_comment.try(:rating) %>
      </p>

      <div class="user-buttons">
        <%= link_to 'edit', edit_product_path(@product) %> |
        <%= link_to 'back', products_path %>
      </div>

    </div>
  </div><!-- end row-->
</div><!--end container-->
