<div class="container">
  <h2> User info</h2>
  <p>
    <strong>First name:</strong>
    <%= @user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @user.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <div class="user-buttons">
    <%= link_to 'edit', edit_user_path(@user) %> |
    <%= link_to 'back', users_path %>
  </div>
</div>
