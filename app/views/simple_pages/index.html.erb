        <button type="button" class="btn btn-default">click here</button>
    </div>
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12 main-products">
        <h4 class="product-header"> kids</h4>
        <%= image_tag("kids-bike-home.jpg", class: "img-responsive") %>
        <p class="product-description">products for the youngest cyclists</p>
        <button type="button" class="btn btn-default">click here</button>
    </div>
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12 main-products">
        <h4 class="product-header"> road</h4>
        <%= image_tag("road-bike-home.jpg", class: "img-responsive") %>
        <p class="product-description">the best fastestroad bikes</p>
        <button type="button" class="btn btn-default">click here</button>
    </div>
  </div><!-- end row -->
